#define SOCKET_TIMEOUT (60)

DM_INLINE_STATIC void setalarm(int secs) {
  sigset_t alm;
  sigemptyset(&alm);
  sigaddset(&alm, SIGALRM);
  
  pthread_sigmask(SIG_BLOCK, &alm, NULL);
  timeout = FALSE;
  alarm(secs);
  pthread_sigmask(SIG_UNBLOCK, &alm, NULL);
}

