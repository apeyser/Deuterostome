P killrthreads(void) {
  P r = OK;

  if (sigfd != -1) {
    B sig = SIGMAP_QUIT;
    send(sigfd, &sig, 1, 0);
    sleep(5);
    sig = SIGMAP_KILL;
    send(sigfd, &sig, 1, 0);
    if (close(sigfd) && ! r) r = -errno;
    sigfd = -1;
  }

  if (socketfd != -1) {
    r = delsocket_force(socketfd);
    socketfd = -1;
  }

  if (pid != -1) {
    if (kill(pid, SIGTERM)) {
      if (! r) r = -errno;
      kill(pid, SIGKILL);
    }

    setalarm(10);
    while (waitpid(pid, NULL, 0) == -1 && ! timeout) {
      if (errno != EINTR) {
	if (! r) r = -errno;
	kill(pid, SIGKILL);
	break;
      };
    };

    if (timeout) {
      kill(pid, SIGKILL);
      if (! r) r = TIMER;
    }

    pid = -1;
  }

  mpin = 0;
  return r;
}

static void killrthreads_exit(void) {
  killrthreads();
}

void rthreads_init(void) {
  if (atexit(killrthreads_exit)) 
    error_local(1, errno, "Unable to add rthread exit handler");
}

