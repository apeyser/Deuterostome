    warnxn("Child %s %i exited normally", type, pid);
  else {
    errorxn("Child %s %i exited with status %i", 
	    type, pid, WEXITSTATUS(status));
    if (WIFSIGNALED(status))
      errorxn("Child %s %i exited due to signal %i", 
	      type, pid, WTERMSIG(status));
  }
}

