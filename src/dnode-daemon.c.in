    if (nodes->node[i].pid == pid) {
      nodes->node[i].pid = 0;
      handlestatus("dnode", status, pid);
      return;
    }

    if (nodes->node[i].io == pid) {
      nodes->node[i].io = 0;
      handlestatus("io", status, pid);
      killnode(&nodes->node[i].pid, SIGINT);
      return;
    }
  }
}

